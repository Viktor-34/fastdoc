# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/offerdoc"

# Auth
# Сгенерировать: openssl rand -base64 32
NEXTAUTH_SECRET="replace-with-strong-random-secret"
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_DEBUG="false"

# Администраторы продукта (через запятую). Только они видят /admin.
ADMIN_EMAILS="your@email.com"

# Email (magic-link provider)
EMAIL_FROM="no-reply@example.com"
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="smtp-user"
EMAIL_SERVER_PASSWORD="smtp-password"

# S3-compatible storage (Timeweb Cloud, AWS, MinIO etc.)
# Если не заданы — файлы сохраняются локально в public/uploads/
S3_BUCKET=""
S3_REGION="ru-1"
S3_ENDPOINT="https://s3.timeweb.cloud"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_PUBLIC_URL=""

# PDF generation (Puppeteer + Chromium)
# На VPS установить: sudo apt install -y chromium-browser
# Если путь не стандартный, укажите явно:
CHROME_EXECUTABLE_PATH=""
